<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/inc_not_log"
            layout="@layout/frg_04_mime_not_logged">
        </include>
        <include
            android:id="@+id/inc_log"
            layout="@layout/frg_04_mime_logged"
            android:visibility="gone"></include>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_there"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/selector_favoriteicon" />

            <TextView
                android:id="@+id/sctext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/selector_history" />

            <TextView
                android:id="@+id/lstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frg04_night_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/yj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/selector_nighticon" />

            <TextView
                android:id="@+id/yjtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夜间" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>