<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@mipmap/ajh"
    android:visibility="visible"
    >
<LinearLayout
    android:id="@+id/loglinear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:gravity="center"
    >
    <ImageButton
        android:id="@+id/phone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/account_icon_mobile"
        android:layout_margin="10dp"
        />
    <ImageView
        android:id="@+id/weixin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/account_icon_weixin"
        android:layout_margin="10dp"
        />
    <ImageButton

        android:id="@+id/qq"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/account_icon_qzone"
        android:layout_margin="10dp"
        />

    <ImageView
        android:id="@+id/sina"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/account_icon_weibo"
        android:layout_margin="10dp"
        />
</LinearLayout>
    <TextView
        android:id="@+id/move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更多登录方式 >"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
         android:layout_centerInParent="true"
        android:layout_below="@id/loglinear"
        android:layout_marginTop="15dp"
        />
</RelativeLayout>